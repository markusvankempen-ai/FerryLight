# FerryLight React App Environment Configuration
# Copy this file to .env and replace with your actual credentials

# API Credentials - REQUIRED for production
# Get these from your API provider or server administrator
REACT_APP_API_USERNAME=your_actual_username
REACT_APP_API_PASSWORD=your_actual_password

# API Endpoints - These are already correct for production
REACT_APP_FERRY_API_URL=https://nodered.ferrylight.online/rbferry
REACT_APP_WEATHER_API_URL=https://nodered.ferrylight.online/rbweather

# Admin Login Credentials - Change these for security
REACT_APP_ADMIN_USERNAME=admin
REACT_APP_ADMIN_PASSWORD=ferrylight2025

# Development Settings
REACT_APP_DEBUG_MODE=true
REACT_APP_LOG_LEVEL=debug

# Domain Configuration (for Traefik labels)
FERRYLIGHT_DOMAIN=ferrylight.yourdomain.com

# Docker Network Configuration (if using existing Traefik)
# Set to your existing Traefik network name if different from default
TRAEFIK_NETWORK=traefik_default
TRAEFIK_NETWORK_EXTERNAL=true

# Optional Services
POSTGRES_PASSWORD=your_secure_postgres_password

# Note: All environment variables must start with REACT_APP_ to be accessible in the React app 