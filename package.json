{
  "name": "ferrylight-website",
  "version": "1.0.0",
  "description": "Modern React website for FerryLight ferry status and weather information",
  "author": {
    "name": "Markus van Kempen",
    "email": "markus.van.kempen@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/ferrylight-app.git"
  },
  "keywords": [
    "ferry",
    "weather",
    "react",
    "pwa",
    "real-time",
    "led-display",
    "docker",
    "express",
    "server"
  ],
  "license": "MIT",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "axios": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "framer-motion": "^10.12.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "react-router-dom": "^6.11.2",
    "react-scripts": "5.0.1",
    "styled-components": "^5.3.10",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "prebuild": "npm run generate-favicons",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:docker": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "generate-favicons": "node scripts/generate-favicons.js",
    "deploy": "npm run build && echo 'Build complete! Upload the build folder to your server.'",
    "server": "node server.js",
    "dev": "concurrently \"npm run start\" \"npm run server\"",
    "start:prod": "npm run build && npm run server"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "proxy": "http://localhost:3001",
  "devDependencies": {
    "concurrently": "^9.2.0"
  }
}
